---

import type { Playlist } from "../lib/data";
interface Props {
    playlist:Playlist
}
const {playlist} = Astro.props
const {id, cover, title, artists, color} = playlist
const artistsString = artists.join(", ")
---


<a
href=`/playlist/${id}`
class="playlist-item flex relative p-2 overflow-hidden items-center gap-2 rounded-md hover:bg-zinc-500"
>
    <picture class="flex-none h-10 w-10">
        <img src={cover} alt={`Cover of ${title}`} class="object-cover w-full h-full rounded-md">
    </picture>
    <div class="flex flex-auto flex-col truncate">
        <h4 class="text-sm">
            {title}
        </h4>
        <span class="text-xs">
            {artistsString}
        </span>
    </div>
</a>