---
import Time from "../icons/Time.astro";
import {type Song } from "../lib/data";

interface Props {
    songs:Song[]
}

const {songs} = Astro.props

---


<table class="table-auto text-left min-w-full divide-2 divide-y-2 divide-gray-500/50">
    <thead>
        <tr class="text-gray-300 text-sm font-light">
            <th class="px-4 py-2">#</th>
            <th class="px-4 py-2">Titulo</th>
            <th class="px-4 py-2">Album</th>
            <th class="px-4 py-2">Tiempo</th>
        </tr>

    </thead>
    <tbody class="mt-[20px]">
        {           
            songs.map((song, index) => 
                (
                    <tr class="text-gray-300 h-[16px] text-sm font-light hover:bg-white/10">
                        <td class="px-4 py-2 rounded-l">{index + 1}</td>    
                        <td class="px-4 py-2 flex gap-2">
                            <picture>
                                <img src={song.image} alt={song.title} class="w-10 h10 rounded-md" />
                            </picture> 
                            <div class="flex flex-col">
                                <h3 class="text-gray-100 font-bold">{song.title}</h3>
                                <span class="text-gray-400">{song.artists.join(', ')}</span>   
                            </div>
                        </td>      
                        <td class="px-4 py-2 text-gray-400 font-bold">{song.album}</td>    
                        <td class="px-4 py-2 text-gray-400 font-bold rounded-r">{song.duration}</td>    
                    </tr>
                )
                
            )
        }
    </tbody>
</table>
